{
    "env": {"jest": true, "es6": true, "node": true},

    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "prettier"
    ],

    "plugins": ["react", "prettier"],

    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },

    "parser": "babel-eslint",

    "rules": {
        "react/jsx-uses-react": "error",
        "react/prop-types": 0,
        "prettier/prettier": ["error", { "singleQuote": true}]
    }
}