{
  "env": { "jest": true, "es6": true, "node": true },

  "extends": [
    "eslint:recommended",
    "plugin:mdx/recommended",
    "plugin:react/recommended",
  ],

  "plugins": ["react"],

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },

  "parser": "babel-eslint",

  "rules": {
    "react/jsx-uses-react": "error",
    "react/prop-types": 0,
  }

}
