{
    "env": {"jest": true, "es6": true},

    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],

    "plugins": ["react"],

    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },

    "rules": {
        "react/jsx-uses-react": "error"
    }
}